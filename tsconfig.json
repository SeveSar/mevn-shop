{
  "files": [],
  "include": [
    "src/**/*.ts",
    "env.dt.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6", // Установите target на ES6 или выше
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/jest",
      "vite/client"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}